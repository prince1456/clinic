<% if params[:locale] === "ar" %>
  <div class="row"style='direction: rtl'>
<% else %>
  <div class="row">
<% end %>

    <div class="col-sm-12 col-lg-12 main">
      <div class="panel panel-default">
        <div class="panel-heading">
          <% if current_user.role == "admin" %>
          <div class="col-md-2 col-sm-2 col-xs-12"><%= link_to t('links.new'), new_post_path, class:'btn btn-default' %></div>
          <% end %>
          <div class="col-md-3 col-sm-3 col-md-offset-3 hidden-sm hidden-xs">
            <%= t "posts.index.number_posts" %>
            <b>
              <%= @posts.count %>
            </b>
          </div>
          <div class="col-md-4 col-sm-8 col-xs-12 ">
            <%= search_form_for @search, class:'form-inline' do |f|%>
            <div class="form-group">
              <%= f.text_field :title_cont, class:'form-control', placeholder: t("posts.index.placeholder") %>
            </div>
            <%= f.submit t('helpers.submit.search'), class:'btn btn-default' %>
            <% end  %>
          </div>
        </div>
        <div class="panel-body">
      <% if params[:locale] === "en" %>
          <table class="table table-striped table-hover">
            <thead>
              <th>
                <center><%= t "posts.index.id" %></center>
              </th>
              <th>
                <center><%= t "posts.index.title" %></center>
              </th>
              <th>
                <center><%= t "posts.index.content" %></center>
              </th>
              <th>
                <center><%= t "posts.index.auther" %></center>
              </th>
            </thead>
            <tbody>
              <% @posts.each do |post| %>
              <tr>
                <td><%= post.id  %></td>
                <td><%= link_to post.title, post_path(post)  %></td>
                <td><%= strip_tags(post.content.first(80)) %></td>
                <td><%= post.author %></td>
              </tr>
              <% end %>
            </tbody>
            <%= will_paginate @posts %>
          </table>
      <% else %>
          <table class="table table-striped table-hover text-right">
            <thead>
              <th class="text-right">
                <%= t "posts.index.id" %>
              </th>
              <th class="text-right">
                <%= t "posts.index.title" %>
              </th>
              <th class="text-right">
                <%= t "posts.index.content" %>
              </th>
              <th class="text-right">
                <%= t "posts.index.auther" %>
              </th>
            </thead>
            <tbody>
              <% @posts.each do |post| %>
              <tr>
                <td><%= post.id  %></td>
                <td><%= link_to post.title, post_path(post)  %></td>
                <td><%= strip_tags(post.content.first(80)) %></td>
                <td><%= post.author %></td>
              </tr>
              <% end %>
            </tbody>
            <% end %>
          </table>
          <%= will_paginate @posts %>
        </div>
      </div>
    </div>
  </div>

</div>
