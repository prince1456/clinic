<div class="row header-blog"></div>
  <div class="container show-post-blog">
        <div class="row">
            <!-- Blog Post Content Column -->
            <div class="col-lg-8">
                <!-- Blog Post -->
                <!-- Title -->
                <h1><%= @post.title %></h1>
                <!-- Author -->
                <p class="lead">
                    by <a href="#"><%= @post.author %></a>
                </p>
                <hr>
                <!-- Date/Time -->
                <p><span class="glyphicon glyphicon-time"></span> Posted on <%= time_ago(@post.created_at) %></p>
                <hr>
                <!-- Preview Image -->
                <% if @post.picture.present? %>
                  <%= image_tag @post.picture_url(:large), class: 'img-responsive'%>
                <% end %>

                <hr>

                <!-- Post Content -->
                <p class="lead"> <%= raw @post.content %></p>

                <hr>
                <% if @post.attachments.present? %>
                  <a class="btn btn-link" href='<%= @post.attachments.url %>'><%=File.basename(@post.attachments.url)%></a>
                <% end %>
                <% if @post.video.present? %>
                <%= video_tag @post.video, :size => "320x240", :controls => true %>
                <% end  %>
                <% if can? :manage, @post %>
                  <%= link_to 'Edit', edit_post_path(@post) %>
                  <%= link_to "Delete",post_path(@post),
                                      method: :Delete,
                                      data: {confirm: "Are you sure?"}%>
                <% end %>
                <% if @post.liked_by?(current_user) %>
                  <%= link_to "liked", post_like_path(@post, @post.like_for(current_user)) ,method: :delete %>
                <% else %>
                  <%= link_to "like" ,post_likes_path(@post) ,method: :post %>
                <% end %>
                (<%= @post.likes.count %>)
                <!-- Blog Comments -->


                  <!-- Comments Form -->
                    <div class="well">
                        <% if current_user.present?   %>
                            <h4>Leave a Comment:</h4>
                              <%= render "/comments/form" %>
                            <% else %>
                              <h4> For sending comment you need to sign in</h4>
                        <% end %>
                    </div>
                <hr>

                <!-- Posted Comments -->
                <!-- Comment -->
                <div id="comments">
                  <% @post.comments.each do |comment| %>
                      <%= render "/comments/comment", comment: comment %>
                      <% end %>
                </div>
          </div>
            <div class="col-lg-4">
              <div class="well">

                <h4 style="color= black;">Blog Post</h4>
                <div class="row">
                    <div class="col-lg-12">
                        <ul class="list-unstyled">
                          <% @posts.each do |post| %>
                            <li><%= link_to post.title, post_path(post) %>
                            </li>
                            <br>
                          <% end %>
                        </ul>
                    </div>
                </div>
              </div>
            </div>
        <!-- /.row -->
    </div>
</div>
