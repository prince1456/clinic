<div class="container">
    <%= simple_form_for @post, html: {multipart: true} do |f| %>
      <%= f.input :title %>
      <%= f.cktext_area :content %>
      <%= f.input :author %>
      <%= f.input :picture %>
      <%= f.input :video %>
      <%= f.input :attachments %>
      <%= f.input :lang, collection: [:ar, :en] %>
      <%= f.button :submit %>
    <% end %>
</div>
