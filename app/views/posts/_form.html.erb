<div class="container">
    <%= simple_form_for @post, html: {multipart: true} do |f| %>
      <%= f.input :title %>
      <%= f.input :content %>
      <%= f.input :author %>
      <%= f.input :picture %>
      <%= f.input :video %>
      <%= f.input :attachments %>
      <%= f.button :submit %>
    <% end %>
</div>
