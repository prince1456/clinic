<div class="container">
  <div class="row">
    <div class="well well">
      <div class="row">
        <div class="col-sm-6 col-md-4">
          <% if @profile.image.present? %>
            <%= image_tag @profile.image, :size => "320x240", class: "img-rounded img-responsive" %>
          <% end %>
        </div>
        <div class="col-sm-6 col-md-8">
          <h2><%= @profile.first_name %> <%= @profile.last_name %></h2>
          <small><cite title="San Francisco, USA"><%= @profile.address %><i class="glyphicon glyphicon-map-marker">
                        </i></cite></small>
          <h4><i class="glyphicon glyphicon-envelope"></i> <%= current_user.email %></h4>
          <h4><i class="glyphicon glyphicon-briefcase"></i> <%= @profile.job %></h4>
          <h4><i class="glyphicon glyphicon-phone"></i><%= @profile.phone_number %></h4>
          <h4><strong>Gender: </strong><%= @profile.gender %></h4>
          <%= link_to "Edit profile", edit_profile_path(@profile), class: "btn btn-default" %>

        </div>
      </div>
    </div>
  </div>
</div>
      <% if current_user.role == "admin" && current_user.role == "doctor"%>
        <%= simple_form_for [@profile, @directory] do |f| %>
        <%= f.file_field :file %>
          <%= f.button :submit %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div>
  <% if current_user.role == "admin" %>
  <% @profile.directories.each do |d| %>
  <p><%= d.file %></p>
  <h3><%= d.created_at %></h3>
  <%= link_to "Edit", edit_profile_directory_path(@profile, d) %>
  <%= link_to "Delete", profile_directory_path(@profile, d),
                      method: :delete,
                      remote: true,
                      data: {confirm: "Are you sure?"} %>
  <% end %>
  <% end %>
</div>
