  <%= @profile.first_name %>
  <br> <%= @profile.last_name %>
  <br><%= @profile.phone_number %>
  <br><%= @profile.address %>
  <br><%= @profile.emr_name %>
  <br><%= @profile.emr_phone %>
  <% if @profile.image.present? %>
  <br><%= image_tag @profile.image, :size => "320x240" %>
  <% end %>
  <br><%= @profile.gender %>
  <br><%= @profile.nationality %>
  <br><%= @profile.married %>
  <br><%= @profile.job %>

  <%= link_to "Edit profile", edit_profile_path(@profile) %>
  <br>
  <br><br>
  <div>
    <%= simple_form_for [@profile, @directory] do |f| %>
    <%= f.file_field :file %>
      <%= f.button :submit %>
    <% end %>
  </div>
  <div>
  <% if current_user.role == "admin" %>
  <% @profile.directories.each do |d| %>
  <p><%= d.file %></p>
  <h3><%= d.created_at %></h3>
  <%= link_to "Edit", edit_profile_directory_path(@profile, d) %>
  <%= link_to "Delete", profile_directory_path(@profile, d),
                      method: :delete,
                      remote: true,
                      data: {confirm: "Are you sure?"} %>
  <% end %>
  <% end %>
</div>
