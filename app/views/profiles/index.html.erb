<% if params[:locale] == "en" %>
    <div class="col-md-4">
      <%= form_tag profiles_path, method: :get, class: 'something' do %>
        <div class="input-group add-on">
          <%= text_field_tag :search, "", class: 'form-control'  %>
          <div class="input-group-btn">

            <%= button_tag(type: 'submit', class: "btn btn-default") do %>
             <span class="icon-envelope"></span> Search
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <table class="table table-responsive table-striped">
      <thead>
        <th><%= t "profiles.index.picture" %></th>
        <th><%= t "profiles.index.fullname" %></th>
        <th><%= t "profiles.index.phonenumber" %></th>
        <th><%= t "profiles.index.address" %></th>
      </thead>
      <tbody>
        <% @profiles.each do |profile| %>
        <tr>
          <% if profile.image.present? %>
            <td><%=image_tag profile.image_url(:thumb), :size => "70x70 ", class: 'img-responsive img-rounded'  %></td>
          <% else %>
            <td><%= image_tag "default.png", :size => "70x70 ", class: 'img-responsive img-rounded'  %></td>
          <% end %>
          <td><%= link_to "#{profile.first_name} #{profile.last_name}", profile_path(profile) %></td>
          <td><%= profile.phone_number %></td>
          <td><%= profile.address %></td>
        <% end %>
        </tr>
      </tbody>
    </table>
    <%= will_paginate @posts %>
<% else %>
<div class="col-md-4 pull-right">
