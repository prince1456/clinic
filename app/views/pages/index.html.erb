      </div>

    </div>

  </section>

  <section id="team" class="team-block team-member-sec" style="background-image: url(<%= asset_path('team-carousel.jpg')%>)">
    <div class="container">
      <h2 class="title text-center title-doctor"><%= t "index.doctors.title" %></h2>
      <div class="row">
        <% @doctors.each do |doctor| %>
        <div class="col-md-4">
          <div class="doctor-boxes">
            <div class="team-item">
              <%= link_to profile_path(doctor.profile) do %>
              <%= image_tag doctor.profile.image, class: 'screen img-responsive'%>
              <% end %>
            </div>
            <% if params[:locale] === "en" %>

            <div class="name text-center">
              <h4><%= doctor.profile.first_name %></h4>
              <span><%= doctor.profile.position %></span>
            </div>
            <div class="timetable">
              <div class="item">
                <div class="label"><%= doctor.profile.bio %></div>

              </div>
            </div>
          <% else %>
            <div class="name-arabic text-center">
              <h4><%= doctor.profile.first_name_arabic %></h4>
              <span><%= doctor.profile.position_arabic %></span>
            </div>
            <div class="timetable">
              <div class="item">
                <div class="label text-right"><%= doctor.profile.bio_arabic %></div>

              </div>
            </div>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </section>

  <section id="blog" data-selector="section" class="team-member">
    <div class="container">
      <h2 class="title text-center" data-selector="h2"><%= t "index.posts.title" %></h2>
      <div class="row">
        <% @posts.last(4).each do |post| %>
        <div class="col-sm-3">
          <div class="post" data-selector="#testimonials-grid .quote, .pricing-table, .pricing-table .stamp, .post, .panel, .panel-heading, .form-container, .post-content .price-circle">
            <div class="post-media">
              <%= link_to post_path(post) do %>
              <% if post.picture.present? %>
              <%= image_tag post.picture_url(:large), class:'img-responsive image-frontend', alt: post.title, data:{selector: 'img'}%>
              <% end %>
              <% end %>
            </div>
            <div class="post-content">
              <%= link_to post_path(post) do  %>
              <%= strip_tags(post.content.first(100)) %>
              <% end %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </section>

